# RedTeamCoin Client Environment Variables
# Copy this file to .env and customize as needed
# Environment variables take precedence over config files
# All variables must be prefixed with RTC_CLIENT_

# =============================================================================
# SERVER CONNECTION
# =============================================================================

# Mining pool server address (host:port)
# Default: localhost:50051
#RTC_CLIENT_SERVER_ADDRESS=pool.example.com:50051

# =============================================================================
# MINING CONFIGURATION
# =============================================================================

# Enable GPU mining (true/false)
# Default: true
#RTC_CLIENT_MINING_GPU_ENABLED=true

# Enable hybrid mining mode (GPU + CPU simultaneously)
# Default: false
#RTC_CLIENT_MINING_HYBRID_MODE=false

# Auto-delete executable on shutdown (true/false)
# Default: true
#RTC_CLIENT_MINING_AUTO_DELETE=true

# =============================================================================
# GPU TUNING
# =============================================================================

# Nonce range per GPU batch
# Tune for your GPU tier:
#   High-end (RTX 4090):  1000000000
#   Mid-range (RTX 3060): 500000000 (default)
#   Low-end (GTX 1650):   50000000
# Default: 500000000
#RTC_CLIENT_GPU_NONCE_RANGE=500000000

# CPU start nonce (to avoid overlap with GPU range)
# Default: 5000000000
#RTC_CLIENT_GPU_CPU_START_NONCE=5000000000

# =============================================================================
# NETWORK TIMING
# =============================================================================

# Heartbeat interval - how often to send status updates to pool
# Format: duration string (e.g., "30s", "1m", "1.5m")
# Default: 30s
#RTC_CLIENT_NETWORK_HEARTBEAT_INTERVAL=30s

# Retry interval - delay between connection retry attempts
# Format: duration string
# Default: 10s
#RTC_CLIENT_NETWORK_RETRY_INTERVAL=10s

# Max retry time - total time to keep retrying before giving up
# Format: duration string
# Default: 5m
#RTC_CLIENT_NETWORK_MAX_RETRY_TIME=5m

# =============================================================================
# BEHAVIOR
# =============================================================================

# Worker update interval - how often workers report progress (in hashes)
# Default: 100000
#RTC_CLIENT_BEHAVIOR_WORKER_UPDATE_INTERVAL=100000

# =============================================================================
# EXAMPLES
# =============================================================================

# Example 1: Connect to remote pool with GPU disabled
#RTC_CLIENT_SERVER_ADDRESS=pool.redteamcoin.com:50051
#RTC_CLIENT_MINING_GPU_ENABLED=false

# Example 2: Hybrid mining with aggressive GPU settings
#RTC_CLIENT_MINING_HYBRID_MODE=true
#RTC_CLIENT_GPU_NONCE_RANGE=1000000000

# Example 3: Conservative settings for slower hardware
#RTC_CLIENT_GPU_NONCE_RANGE=50000000
#RTC_CLIENT_NETWORK_HEARTBEAT_INTERVAL=60s
