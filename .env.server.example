# RedTeamCoin Server Environment Variables
# Copy this file to .env and customize as needed
# Environment variables take precedence over config files
# All variables must be prefixed with RTC_SERVER_

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# gRPC server port for mining protocol
# Default: 50051
#RTC_SERVER_NETWORK_GRPC_PORT=50051

# HTTPS API port for pool management
# Default: 8443
#RTC_SERVER_NETWORK_API_PORT=8443

# HTTP port for web interface
# Default: 8080
#RTC_SERVER_NETWORK_HTTP_PORT=8080

# =============================================================================
# MINING PARAMETERS
# =============================================================================

# Mining difficulty (number of leading zeros required in block hash)
# Range: 1-64
# Default: 6
#RTC_SERVER_MINING_DIFFICULTY=6

# Block reward in coins
# Must be positive integer
# Default: 50
#RTC_SERVER_MINING_BLOCK_REWARD=50

# =============================================================================
# TLS/HTTPS CONFIGURATION
# =============================================================================

# Enable TLS for gRPC connections (true/false)
# Default: false
#RTC_SERVER_TLS_ENABLED=false

# Path to TLS certificate file (required if TLS enabled)
# Default: certs/server.crt
#RTC_SERVER_TLS_CERT_FILE=certs/server.crt

# Path to TLS private key file (required if TLS enabled)
# Default: certs/server.key
#RTC_SERVER_TLS_KEY_FILE=certs/server.key

# =============================================================================
# API SERVER TIMEOUTS
# =============================================================================

# API read timeout
# Format: duration string (e.g., "15s", "1m")
# Default: 15s
#RTC_SERVER_API_READ_TIMEOUT=15s

# API write timeout
# Format: duration string
# Default: 15s
#RTC_SERVER_API_WRITE_TIMEOUT=15s

# API idle timeout
# Format: duration string
# Default: 60s
#RTC_SERVER_API_IDLE_TIMEOUT=60s

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Pool statistics update interval
# Format: duration string
# Default: 30s
#RTC_SERVER_LOGGING_UPDATE_INTERVAL=30s

# Log file path for pool statistics
# Default: pool_log.json
#RTC_SERVER_LOGGING_FILE_PATH=pool_log.json

# =============================================================================
# EXAMPLES
# =============================================================================

# Example 1: Production server with TLS
#RTC_SERVER_NETWORK_GRPC_PORT=50051
#RTC_SERVER_TLS_ENABLED=true
#RTC_SERVER_TLS_CERT_FILE=/etc/rtc/certs/server.crt
#RTC_SERVER_TLS_KEY_FILE=/etc/rtc/certs/server.key
#RTC_SERVER_MINING_DIFFICULTY=8

# Example 2: High-difficulty mining pool
#RTC_SERVER_MINING_DIFFICULTY=10
#RTC_SERVER_MINING_BLOCK_REWARD=100
#RTC_SERVER_LOGGING_FILE_PATH=/var/log/rtc/pool.json

# Example 3: Development server on custom ports
#RTC_SERVER_NETWORK_GRPC_PORT=60051
#RTC_SERVER_NETWORK_API_PORT=9443
#RTC_SERVER_NETWORK_HTTP_PORT=9080
#RTC_SERVER_MINING_DIFFICULTY=4
